{
  "theme": "dark",
  "display": {
    "style": "powerline",
    "charset": "unicode",
    "autoWrap": true,
    "padding": 1,
    "lines": [
      {
        "segments": {
          "directory": {
            "enabled": true,
            "style": "basename"
          },
          "git": {
            "enabled": true,
            "showWorkingTree": true,
            "showOperation": true
          },
          "model": {
            "enabled": true
          },
          "session": {
            "enabled": true,
            "type": "both",
            "costSource": "calculated"
          },
          "block": {
            "enabled": true,
            "type": "weighted",
            "burnType": "cost"
          },
          "today": {
            "enabled": true,
            "type": "cost"
          },
          "context": {
            "enabled": true,
            "showPercentageOnly": false
          },
          "metrics": {
            "enabled": true,
            "showResponseTime": false,
            "showLastResponseTime": false,
            "showDuration": true,
            "showMessageCount": true,
            "showLinesAdded": false,
            "showLinesRemoved": false
          }
        }
      }
    ]
  },
  "budget": {
    "session": { "amount": 10.0, "warningThreshold": 80 },
    "block": { "amount": 15.0, "type": "cost", "warningThreshold": 80 },
    "today": { "amount": 50.0, "warningThreshold": 80 }
  }
}
